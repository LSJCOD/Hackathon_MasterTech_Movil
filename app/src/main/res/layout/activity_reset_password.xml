<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:orientation="vertical"
    android:background="@drawable/iconback2"
    >

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/mundox96"

        />


    <TextView

        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Olvidates tu contraseña?"
        android:textSize="30dp"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_margin="12dp"
        android:textColor="@color/primaryTextColor"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_resetpassemail"
        />

    <EditText
        android:layout_margin="50dp"
        style="@style/AppTheme.EditTextStyle"
        android:id="@+id/editTextTextEmailAddress"
        android:drawableStart="@drawable/vector_email"
        android:hint="Correo"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button

        android:id="@+id/btn_envpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:text="Enviar"
        />

</LinearLayout>